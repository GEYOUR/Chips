//（共阴编码）
//显示－－HGFE,DCBA－－编码
//0     －－0011,1111－－0x3F;
//1     －－0000,0110－－0x06;
//2     －－0101,1011－－0x5B;
//3     －－0100,1111－－0x4F;
//4     －－0110,0110－－0x66;
//5     －－0110,1101－－0x6D;
//6     －－0111,1101－－0x7D;
//7     －－0000,0111－－0x07;
//8     －－0111,1111－－0x7F;
//9     －－0110,1111－－0x6F;
//共阳极是共阴极的取反
#include "iom16v.h"
unsigned char num[10]={0x02,0xA7,0x44,0x05,0xA1,0x11,0x10,0x87,
                          0x00,0x01};
	unsigned char num1[10]={0x3F,0x06,0x5B,0x4F,0x66,0x6D,0x7D,0x7F,
                          0x6F};
void io_init(void)
{DDRC=0XFF;
 PORTC=0XFF;
 DDRD=0XFF;
 PORTD=0X00;
 DDRA=0X00;
 PORTA=0XFF;
}
void delay(int i)
{int a,b;
  for(a=0;a<i;a++)
   for(b=0;b;b++)
       ;
}
void main(void)
{ char i,j=0;
io_init();
while(1)
   { if ((PINA & (1 << PA6)) == 0) { 
                                   PORTC=num[i];
								    if(i<9) {i++;}
									else {i=0;}
									delay(200);
                                   }
     if ((PINA & (1 << PA7)) == 0) {
	                      for(j=0;j<=9;j++)
	                                {
	                                PORTD=num1[j];
								 
									 delay(20000); 
	                                 }
                           }
  }
}
